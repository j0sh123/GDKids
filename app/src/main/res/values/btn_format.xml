<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="btnStyle" parent="TextAppearance.AppCompat.Medium">
            <item name="android:background">@drawable/btn_animation</item>
            <item name="android:textSize">20dp</item>
            <item name="android:textColor">@color/btnText</item>
        </style>

        <style name="btnStyle_close_x" parent="btnStyle">
            <item name="android:text">x</item>
            <item name="android:textSize">@dimen/close_x_textSize</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_width">30dp</item>
            <item name="android:layout_height">30dp</item>
        </style>

        <style name="btnStyle_close_x_gray" parent="TextAppearance.AppCompat.Medium">
            <item name="android:background">@drawable/btn_round_close</item>
            <item name="android:textColor">@color/btnText</item>
            <item name="android:text">x</item>
            <item name="android:layout_width">30dp</item>
            <item name="android:layout_height">30dp</item>

        </style>
</resources>