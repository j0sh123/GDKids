<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Completo"
        android:textSize="15dp"
        android:gravity="center"
        android:textColorHint="@color/TxtView"
        android:textColor="@color/TxtView"
        android:backgroundTint="@color/gray"
        android:id="@+id/txt_chat_register_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:gravity="center"
        android:textSize="15dp"
        android:textColorHint="@color/TxtView"
        android:textColor="@color/TxtView"
        android:backgroundTint="@color/gray"
        android:id="@+id/txt_chat_register_user_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:textSize="15dp"
        android:gravity="center"
        android:textColorHint="@color/TxtView"
        android:textColor="@color/TxtView"
        android:backgroundTint="@color/gray"
        android:id="@+id/txt_chat_register_password_input"/>
    <Button
        android:id="@+id/btn_chat_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@drawable/btn_animation"
        android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>