<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThomeworkReview"
    android:background="@color/background"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="20dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_arrow_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back"
                    android:layout_marginLeft="20dp" />

                <!--    cmt-alumno-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

    <!--                <TextView-->
    <!--                    android:textSize="15sp"-->
    <!--                    style="@style/TxtFormat1"-->
    <!--                    android:text="ALUMNO : " />-->

                    <TextView
                        android:id="@+id/txt_student_name"
                        style="@style/TxtFormat1"
                        android:text=" Juan Carlos"
                        android:textSize="18sp" />

                </LinearLayout>
           </LinearLayout>

            <!-- LINIA -->
            <LinearLayout
                android:layout_width="@dimen/horizontal_line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horizontal_line_top"
                android:background="@color/lineHorizontal"
                android:elevation="1dp"
            />
            <!--/////////-->

            <!--    cmt-imagenes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TxtFormat1"
                    android:layout_marginLeft="@dimen/margin_left_txt"
                    android:text="IMAGENES">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview_student_images1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/borders_lines"
                            android:scaleType="centerCrop"
                            android:backgroundTint="@color/background"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview_student_images2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/borders_lines"
                            android:backgroundTint="@color/background"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview_student_images3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/borders_lines"
                            android:backgroundTint="@color/background"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- LINIA -->
            <LinearLayout
                android:layout_width="@dimen/horizontal_line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horizontal_line_top"
                android:background="@color/lineHorizontal" />
            <!--/////////-->

            <!--    cmt-video-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="vertical">

                <TextView
                    style="@style/TxtFormat1"
                    android:layout_marginLeft="@dimen/margin_left_txt"
                    android:text="VIDEO" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="@dimen/margin_top">

                    <VideoView
                        android:id="@+id/video_webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                         />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- LINIA -->
            <LinearLayout
                android:layout_width="@dimen/horizontal_line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horizontal_line_top"
                android:background="@color/lineHorizontal" />
            <!--/////////-->

            <!--    cmt-grabacion-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="vertical">

                <TextView
                    style="@style/TxtFormat1"
                    android:layout_marginLeft="@dimen/margin_left_txt"
                    android:text="AUDIO" />

                <LinearLayout
                    android:id="@+id/linearLayout_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleview_audios_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- LINIA -->
            <LinearLayout
                android:layout_width="@dimen/horizontal_line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horizontal_line_top"
                android:background="@color/lineHorizontal" />
            <!--/////////-->

            <!--    cmt-texto-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="vertical">

                <TextView
                    style="@style/TxtFormat1"
                    android:layout_marginLeft="@dimen/margin_left_txt"
                    android:text="TEXTO" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Gracias profesora por esta enseñanza
lalallalalalla"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Ingresar Notificación"
                    android:textColor="@color/TxtView"
                    android:textColorHint="@color/TxtView"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- LINIA -->
            <LinearLayout
                android:layout_width="@dimen/horizontal_line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horizontal_line_top"
                android:background="@color/lineHorizontal" />
            <!--/////////-->

            <!--    cmt-revisiones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TxtFormat1"
                    android:layout_marginLeft="@dimen/margin_left_txt"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="REVISIÓN" />

<!--                cmt-check boxes-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/TxtView"
                            android:layout_marginLeft="5dp"
                            android:text="Tarea no acabada" />

                        <CheckBox
                            android:id="@+id/chk_homewrk_not_finished"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:buttonTint="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Tarea terminada"
                            android:textColor="@color/TxtView"/>

                        <CheckBox
                            android:id="@+id/chk_homewrk_finished"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:buttonTint="@color/colorPrimary" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/linearLayout_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:focusableInTouchMode="true"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/edt_notification"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Ingresar Notificación"
                            android:textColor="@color/TxtView"
                            android:textColorHint="@color/TxtView"
                            android:backgroundTint="@color/colorPrimary"
                            android:inputType="textMultiLine" />

                        <ImageButton
                            android:id="@+id/imb_send_notification"
                            style="@style/btnStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_send" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>