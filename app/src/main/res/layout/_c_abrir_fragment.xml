<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chat2.AbrirFragment">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.graddualkids.chat2.FragmentUsers"
        android:id="@+id/fragment_users"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHATS FRAGMENT PARA COLOCAR EN OTRA PARTE"
        android:layout_margin="5dp"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.graddualkids.chat2.FragmentUsersChats"
        android:id="@+id/fragment_users_chats"/>

</LinearLayout>